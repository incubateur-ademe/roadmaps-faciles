{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/config": [
                "../src/config.ts"
            ],
            "@/utils/*": [
                "../src/lib/utils/*"
            ],
            "@/prisma/*": [
                "../src/generated/*"
            ],
            "@/*": [
                "../src/*"
            ]
        },
    },
    "include": [
        "../global.d.ts",
        "../env.d.ts",
        "../types/**/*.d.ts",
        "../**/*.ts",
        "../**/*.tsx",
    ],
    "exclude": [
        "node_modules"
    ]
}